{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.login' | trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h1>{{ 'nav.login' | trans }}</h1>
                <div class="form-group">
                    <label for="inputEmail">{{ 'user.email' | trans }}</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus autocomplete="email">
                </div>
                <div class="form-group">
                    <label for="inputPassword">{{ 'user.password' | trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                <div class="form-group">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> {{ 'login.remember_me' | trans }}
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-lock mr-2"></i> {{ 'login.submit' | trans }}
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
